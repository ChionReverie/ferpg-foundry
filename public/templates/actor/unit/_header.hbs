<header class="feRPG-unitheader feRPG-row">
  <div class="feRPG-column feRPG-flexfill">
    <h1 class="feRPG-flexfill">
      {{formInput fields.name value=document.name localize=false}}
    </h1>
    <span class="feRPG-unitheader__classname">
      {{!-- #TODO: Derive class name and level from stats --}}
      <span>Class Name</span> Lv. <span>5</span>
    </span>
    <div class="feRPG-row feRPG-unitheader__statusbars">
      {{>"systems/fireemblem/templates/actor/unit/_xpbar.hbs"}}
      {{>"systems/fireemblem/templates/actor/unit/_hpbar.hbs"}}
    </div>
  </div>
  <div class="feRPG-column feRPG-unitheader__sidebar">
    {{>"systems/fireemblem/templates/components/_labeled_stat.hbs"
      label=(localize "FERPG.sheet.unit.label.move") 
      value=system.move.value 
      size="medium" flavor="light" 
    }}
    {{>"systems/fireemblem/templates/components/_labeled_stat.hbs" 
      label=(localize "FERPG.sheet.unit.label.constitution") 
      value=system.constitution.value 
      size="medium" flavor="light"
    }}
    {{>"systems/fireemblem/templates/components/_labeled_stat.hbs" 
      label=(localize "FERPG.sheet.unit.label.sight") 
      value=system.sight.value 
      size="medium" flavor="light"
    }}
  </div>
</header>